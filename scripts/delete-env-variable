#!/usr/bin/env python3
import sys
import asyncio
import argparse

# The path to import libraries need to be included
sys.path.insert(1, '/Users/marshallamey/bin/sysadmintools/lib')
from AWS import AWS as A


## Parse command arguments
parser = argparse.ArgumentParser()
parser.add_argument('-n', '--name', 
    help='Name of the variable. Required argument.',  
    metavar=''
)
args = parser.parse_args()
if not args.name:
    print('You have not entered the name of the variable to delete. Use --help for more information')
    sys.exit()

AWS = A()
res = AWS.deleteEnvVariable(args.name)

print(res)